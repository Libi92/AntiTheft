<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PrefSetting" >

    <EditText
        android:id="@+id/editText2_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="27dp"
        android:ems="10"
         android:textColor="#fff"
        android:hint="Phone Number1" >
        
        <requestFocus />
        </EditText>

    <EditText
        android:id="@+id/editText1_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2_num1"
        android:layout_alignRight="@+id/editText2_num1"
        android:layout_below="@+id/editText2_num1"
        android:layout_marginTop="23dp"
        android:ems="10"
         android:textColor="#fff"
        android:hint="Phone Number2" >

    </EditText>

    <EditText
        android:id="@+id/editText1_ema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1_num2"
        android:layout_alignRight="@+id/editText1_num2"
        android:layout_below="@+id/editText1_num2"
        android:layout_marginTop="34dp"
        android:ems="10"
         android:textColor="#fff"
        android:hint="Email ID" />

    <EditText
        android:id="@+id/editText2_userema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1_ema"
        android:layout_alignRight="@+id/editText1_ema"
        android:layout_below="@+id/editText1_ema"
        android:layout_marginTop="30dp"
        android:ems="10"
         android:textColor="#fff"
        android:hint="User Email ID" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Confirm"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/editText3_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2_userema"
        android:layout_alignRight="@+id/editText2_userema"
        android:layout_below="@+id/editText2_userema"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="User Email Password"
        android:inputType="textPassword"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/editTextCmdPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/editText3_pass"
        android:layout_alignRight="@+id/editText3_pass"
        android:ems="10"
        android:hint="Command Prefix"
        android:textColor="#fff" />

</RelativeLayout>
